---
import Layout from "@/layouts/Layout.astro"


import CodeIcon from "@/components/icons/Code.astro"
import SectionContainer from "@/components/SectionContainer.astro"
import TitleSection from "@/components/TitleSection.astro"
import GitHub from "@/components/icons/GitHub.astro"
import Python from "@/components/icons/Python.astro"
import PowerBi from "@/components/icons/PowerBi.astro"
import Tableau from "@/components/icons/Tableau.astro"
import Pandas from "@/components/icons/Pandas.astro"
import Link from "@/components/icons/Link.astro"
import Blog from "@/components/icons/BlogPost.astro"
import LinkButton from "@/components/LinkButton.astro"
import Projects from "@/components/Projects.astro"

const TAGS = {
  PANDAS: {
    name: "Pandas",
    class: "bg-white text-black",
    icon: Pandas,
  },
  PYTHON: {
    name: "Python",
    class: "bg-white text-black",
    icon: Python,
  },
  POWERBI: {
    name: "PowerBi",
    class: "bg-white text-black",
    icon: PowerBi,
  },
  TABLEAU: {
    name: "Tableau",
    class: "bg-white text-black",
    icon: Tableau,
  }
}

const PROJECTS = [
  {
    title: "Sales Analytics",
    description:
      "Cuadro de mando interactivo en PowerBi con información de clientes y hábitos de consumo. Con segmentación mediante análisis de RFM y k-means.",
    github: "https://github.com/multivacs/sales-analytics",
    image: "/projects/sales-analytics.webp",
    post: "https://blog.multivacs.com",
    tags: [TAGS.POWERBI, TAGS.PYTHON, TAGS.PANDAS],
  },
  {
    title: "Employee Turnover Risk",
    description:
      "Proyecto independiente para identificar el riesgo de un empleado de abandonar una empresa usando árboles de decisión.",
    link: "https://public.tableau.com/app/profile/mario.calpena/viz/DashboardRiesgoFuga/Dashboard1",
    post: "https://blog.multivacs.com/posts/riesgo-fuga-empleados/",
    image: "/projects/turnover.webp",
    tags: [TAGS.TABLEAU, TAGS.PYTHON, TAGS.PANDAS],
  },
  {
    title: "YTDSales - A sales dashboard and CRM",
    description:
      "Plataforma desarrollada en FileMaker desde cero como herramienta de análisis para managers y el equipo comercial de EMEA. Responsable de la extracción e integridad de los datos desde el ERP, visualizaciones y desarrollo fullstack.",
    image: "/projects/ytdsales.webp",
    tags: [],
  },
  {
    title: "ADHD Prediction",
    description:
      "Proyecto de final de carrera donde tratamos de predecir la presencia de TDAH en niños usando datos tabulares y redes neuronales.",
    image: "/projects/tdah.webp",
    link: "https://zenodo.org/records/15185925",
    post: "https://blog.multivacs.com/posts/prediccion-tdah-redes/",
    github: "https://github.com/multivacs/TFG2023",
    tags: [TAGS.PYTHON, TAGS.PANDAS],
  },
]

---

<Layout
  title="Porfolio de Mario Calpena - Data Scientist y Developer con +3 años de experiencia"
  description="Porfolio"
>
  <main class="px-4">

    <SectionContainer id="proyectos">
      <TitleSection>
        <CodeIcon class="size-7" />
        Proyectos
      </TitleSection>
      <Projects />
    </SectionContainer>

  </div>
  </main>
</Layout>
